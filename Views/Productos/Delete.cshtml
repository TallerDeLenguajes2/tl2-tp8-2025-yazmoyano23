@model Productos

<h2>Eliminar producto</h2>

<form asp-action="Delete" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Descripcion">Descripci√≥n</label>
        <input asp-for="Descripcion" value="@Model.Descripcion" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" value="@Model.Precio" class="form-control" type="number" readonly />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
    </div>
    <input type="hidden" asp-for="IdProducto" />

</form>