@model Presupuestos

<h2>Eliminar presupuesto</h2>

<form asp-action="Delete" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="NombreDestinatario">Cliente</label>
        <input asp-for="NombreDestinatario" value="@Model.NombreDestinatario" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FechaCreacion">Fecha</label>
        <input class="form-control" value="@Model.FechaCreacion.ToString("dd/MM/yyyy")"  readonly />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
    <input type="hidden" asp-for="IdPresupuesto" />

</form>