@model Presupuestos

<div>
    <h4>Detalle del Presupuesto</h4>
    <p><strong>ID:</strong> @Model.IdPresupuesto</p>
    <p><strong>Cliente:</strong>@Model.NombreDestinatario</p>
    <p><strong>Fecha:</strong> @Model.FechaCreacion.ToShortDateString()</p>
</div>

<hr/>

<h4>Productos Asociados</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Detalle)
        {
            <tr>
                <td>@detalle.Producto.Descripcion</td>
                <td>@detalle.Cantidad</td>
                <td>@detalle.Producto.Precio</td>
                <td>@(detalle.Cantidad * detalle.Producto.Precio)</td>
                <td>
                    <a asp-action="QuitarProducto"
                       asp-route-idPresupuesto="@Model.IdPresupuesto"
                       asp-route-idProducto="@detalle.Producto.IdProducto"
                       class="btn btn-danger btn-sm">
                        Quitar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p> <strong>Cantidad de Productos:</strong> @Model.CantidadProductos()</p>
<p><strong>Total: </strong> $ @Model.MontoPresupuesto()</p>
<p><strong>Total (CON IVA):</strong> $ @Model.MontoPresupuestoConIva()</p>


<div class="mt-3 d-flex align-items-center gap-2">
    <a asp-action="AgregarProducto"  asp-route-id="@Model.IdPresupuesto" class="btn btn-success">Agregar producto</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>